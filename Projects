#include<bits/stdc++.h>  
using namespace std;      
map<pair<long int,long int> ,long int> mp;
static bool cmp(vector<long int> &a,vector<long int> &b)
{   
    return a[1]<b[1];  
}    
long int find(vector<vector<long int>> &vp,long int low,long int high,long int val)  
{   
    long int mid,ans=-1;   
    while(low<=high)
    {   
        mid=(low)+(high-low)/2;  
        if(vp[mid][1]>=val)  
        {  
            high=mid-1;   
        }  
        else 
        {   
            ans=mid;
            low=mid+1;   
        }  
    }   
    return ans+1;
}
main()  
{  
    long int t,i,n,a,b,c;  
    t=1;  
    while(t--)
    {   
        cin>>n;  
        vector<vector<long int>> vp;
            for(i=0;i<n;i++)
           {  
             cin>>a>>b>>c;
             vp.push_back({a,b,c});  
           }    
           sort(vp.begin(),vp.end(),cmp);   
           long int dp[n+1];  
           dp[0]=0;
        for(i=1;i<=n;i++)
        {  
            long int opt1=dp[i-1];   
            long int opt2=vp[i-1][2];  
            long int index=find(vp,0,i-2,vp[i-1][0]);
            opt2+=dp[index];
            dp[i]=max(opt1,opt2);
        }   
        cout<<dp[n];
    }  
}
