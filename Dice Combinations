#include<iostream>  
#include<bits/stdc++.h>
using namespace std;   
main()  
{  
    long int n,i,j,mod;    
    cin>>n;      
    mod=1e9+7;
    long int dp[n+1];  
    memset(dp,0,sizeof dp);
    dp[0]=1;  
    for(i=1;i<=n;i++)
    {  
        for(j=1;j<=6;j++)
        {  
            if(j>i)
            {  
                break;  
            }  
            dp[i]=(dp[i]+dp[i-j])%mod;  
        }  
    }
    cout<<dp[n]<<endl;
}
