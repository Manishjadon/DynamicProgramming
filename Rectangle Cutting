#include<bits/stdc++.h>  
using namespace std;  
int dp[501][501];
int solve(int a,int b)
{   
    if(a==b)
    {  
        return 0; 
    }     
    else if(dp[a][b]!=-1)
    {  
        return dp[a][b];  
    }
    //making horizontal cut      
    int i;
    int ans1=INT_MAX;    
    for(i=1;i<b;i++)
    {   
        ans1=min(ans1,1+solve(a,i)+solve(a,b-i));   
    }    
    //making vertical cut
    int ans2=INT_MAX;  
    for(i=1;i<a;i++)
    {  
        ans2=min(ans2,1+solve(i,b)+solve(a-i,b));  
    }  
    dp[a][b]=min(ans1,ans2);  
    return dp[a][b];
}
main()
{   
    int t,i,a,b;  
    t=1;  
    while(t--)
    {    
        cin>>a>>b;  
        memset(dp,-1,sizeof dp);
        cout<<solve(a,b);   
    }  
}
