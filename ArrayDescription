#include<bits/stdc++.h>  
using namespace std;     
main()  
{     
    long int n,j,m,i,ans=0;   
    long int mod=1e9+7;
    cin>>n>>m;    
    long int a[n+1];  
    long int dp[n+1][m+2];
    for(i=0;i<n;i++)
    {  
        cin>>a[i];  
    }   
    memset(dp,0,sizeof dp);
    for(i=1;i<=n;i++)
    {  
        for(j=1;j<=m;j++)
        {  
           if(i==1)
           {  
               if(a[i-1]==0 || a[i-1]==j)
               {  
                   dp[i][j]=1;   
               }  
               else 
               {  
                   dp[i][j]=0;   
               }  
           }  
           else 
           {  
                 if(a[i-1]==0 || a[i-1]==j)
                 {   
                    dp[i][j]=((dp[i-1][j-1]+dp[i-1][j])%mod+dp[i-1][j+1])%mod;  
                 }  
                 else 
                 {  
                     dp[i][j]=0;  
                 }  
           }  
        }   
    }   
    for(i=1;i<=m;i++)
    {  
        ans=(ans+dp[n][i])%mod;  
    }
    cout<<ans;
}
